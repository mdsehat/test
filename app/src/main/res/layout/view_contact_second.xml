<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/img"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/iconcontact"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="info"
        android:layout_below="@id/img"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_info_viewContact" />

    <TextView
        android:id="@+id/tv_viewContact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tv_info_viewContact"
        android:layout_marginTop="25dp"
        android:layout_below="@id/tv_info_viewContact"
        android:layout_marginLeft="40dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="number"
        android:layout_below="@id/tv_viewContact_name"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_number_viewContact"
        />
    <TextView
        android:id="@+id/tv_viewContact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tv_info_viewContact"
        android:layout_marginTop="25dp"
        android:layout_below="@id/tv_number_viewContact"
        android:layout_marginLeft="40dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="delete"
        android:id="@+id/btnDelete"
        android:gravity="center"
        android:background="@null"
    />
    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="edit"
        android:id="@+id/btnEdit"
        android:gravity="center"
        android:background="@null"
        />
</RelativeLayout>